            android:layout_marginLeft="25dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="1dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/date"
            android:layout_marginLeft="0dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

