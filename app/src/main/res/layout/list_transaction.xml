<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout_transaction">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapeemail"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/receiptno"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_height="wrap_content"
                    android:text="Receipt no:-"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/receiptdate"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_height="wrap_content"
                    android:text="receiptdate"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#080C86"
                    android:textStyle="italic"
                    android:text="Total amount:-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/totalamount"
                    android:textColor="#9C640C"
                    android:layout_height="wrap_content"
                    android:text="totalamount"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#080C86"
                    android:textStyle="italic"
                    android:text="Receipt status:-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/receiptstatus"
                    android:textColor="#9C640C"
                    android:layout_height="wrap_content"
                    android:text="dwdwedwed"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#080C86"
                    android:textStyle="italic"
                    android:text="payment mode:-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/paymode"
                    android:textColor="#9C640C"
                    android:layout_height="wrap_content"
                    android:text="dwdwedwed"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>